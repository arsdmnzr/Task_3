{
  "manifest_version": 3,
  "name": "LinkedIn Data Extractor",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/3000",
    "*://*/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
